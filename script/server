#!/usr/bin/env bash

function consul_server {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  source "$shome/script/profile"

  cd "$shome"
  case "${1:-}" in
    join)
      exec consul agent -config-dir="${shome}/etc" -advertise "$(facts -r '.eth1.ipv4.address')" -join "172.28.128.1"
      ;;
    *)
      exec consul agent -config-dir="${shome}/etc" -advertise "172.28.128.1" -server -bootstrap
      ;;
  esac
}

consul_server "$@"
